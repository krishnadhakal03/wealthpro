# Django settings
DEBUG=False
SECRET_KEY=your_secure_random_key_replace_this_in_production
ALLOWED_HOSTS=yoursite.com,www.yoursite.com
CSRF_TRUSTED_ORIGINS=https://yoursite.com,https://www.yoursite.com

# Email settings
EMAIL_HOST=email-smtp.us-east-1.amazonaws.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your_ses_smtp_username
EMAIL_HOST_PASSWORD=your_ses_smtp_password
DEFAULT_FROM_EMAIL=info@yoursite.com
CONTACT_EMAIL=contact@yoursite.com

# Optional PostgreSQL database
DATABASE_URL=sqlite:///db.sqlite3
# For MySQL use: mysql://user:password@localhost:3306/wealthpro
# For PostgreSQL use: postgres://user:password@localhost:5432/wealthpro

# Security settings for production (not needed for local development)
SECURE_SSL_REDIRECT=True
SESSION_COOKIE_SECURE=True
CSRF_COOKIE_SECURE=True

# AWS Settings (if using S3 for media storage)
# AWS_ACCESS_KEY_ID=your_aws_access_key
# AWS_SECRET_ACCESS_KEY=your_aws_secret_key
# AWS_STORAGE_BUCKET_NAME=your-bucket-name
# AWS_S3_REGION_NAME=us-east-1

# Sentry (error monitoring)
# SENTRY_DSN=your_sentry_dsn 